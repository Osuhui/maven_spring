<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xmlns:aop="http://www.springframework.org/schema/aop"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
                          http://www.springframework.org/schema/beans/spring-beans.xsd
                          http://www.springframework.org/schema/context
                          http://www.springframework.org/schema/context/spring-context.xsd
                          http://www.springframework.org/schema/aop
                          http://www.springframework.org/schema/aop/spring-aop.xsd">

    <!-- 扫描注解 -->
    <context:component-scan base-package="com.huiwl"></context:component-scan>

    <!-- 普通bean -->
    <bean id="GenaralBean"
        class="com.huiwl.service.impl.UserServiceImpl"></bean>

    <!-- 静态工厂 -->
    <bean id="StaticBeanFactory"
        class="com.huiwl.factory.StaticBeanFactory"
        factory-method="createService"></bean>

    <!-- 实例工厂 -->
    <!-- 1.创建工厂实例 -->
    <bean id="BeanFactory" class="com.huiwl.factory.BeanFactory"></bean>

    <!-- 2.获取UserService类， factory-bean指定工厂实例 factory-method指定工厂中的普通方法 -->
    <bean id="UserService"
        class="com.huiwl.service.impl.UserServiceImpl"
        factory-bean="BeanFactory" factory-method="createService"></bean>

</beans>